<p id="notice"><%= notice %></p>
<h1 class="text-center border p-2 m-3 text-danger">Users</h1>
<table class="table">
<thead>
<tr>
<th>Name</th>
<th>Email</th>
<th colspan="3">Action</th>
</tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
<td><%= user.name %></td>
<td><%= user.email %></td>
<td><%= link_to 'Show', user,class:"btn btn-primary" %>
<%= link_to 'Edit', edit_user_path(user),class:"btn btn-warning" %>
<%= link_to 'Destroy', user, method: :delete,
data: { confirm: 'Are you sure?' },class:"btn btn-danger" %>
</td>
</tr>
<% end %>
</tbody>
</table>
<br>
<%= link_to 'New User', new_user_path, class: "btn btn-outline-primary m-3" %>